<%- | String $install_location
      String $user
| -%>
[Unit]
Description=Teamspeak
Wants=network-online.target

[Service]
Type=forking
PIDFile=<%= $install_location -%>/ts3server.pid
User=<%= $user %>
ExecStart=<%= $install_location -%>/ts3server_startscript.sh start
ExecStop=<%= $install_location -%>/ts3server_startscript.sh stop
ExecReload=<%= $install_location -%>/ts3server_startscript.sh restart
Restart=always
RestartSec=15

[Install]
WantedBy=multi-user.target
